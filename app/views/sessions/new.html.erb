<div class='container'>
  <div class='row'>
    <div class='col-md-7'>

    </div>

    <div class='col-md-4'>
      <div class='row'>
        <!--<%= image_tag('logos/vsu-logo-edited.png') %>-->
      </div>
      <div class='row'>
        <h3>Please Log In, or <%= link_to 'Sign up', sign_up_path, class: 'a-con' %></h3>
      </div>
      <div class='row'>
        <div class='col-xs-6 col-sm-6 col-md-6'>
          <a href='#' class='btn btn-lg btn-primary btn-block'>Facebook</a>
        </div>
        <div class='col-xs-6 col-sm-6 col-md-6'>
          <a href='#' class='btn btn-lg btn-info btn-block'>Google</a>
        </div>
      </div>
      <div class='login-or'>
        <hr class='hr-or'>
        <span class='span-or'>or</span>
      </div>

      <%= form_tag sessions_path, class: 'form', method: :post do %>
        <div class="form-group">
          <%= email_field_tag :email, nil, class: 'form-control', required: true, placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, nil, class: 'form-control', required: true, placeholder: 'Password' %>
        </div>
        <div class="pull-right">
          <%= label_tag :remember_me %>
          <%= check_box_tag :remember_me %>
        </div>
        <%= submit_tag 'Login', class: 'btn btn-primary btn-log' %>
      <% end %>
    </div>

    <div class='col-md-1'>

    </div>
  </div>
</div>
