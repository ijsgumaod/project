<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>User</span></th>
                                <th><span>Email</span></th>
                                <th><span>Action</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                              <tr>
                                  <td>
                                      <%= image_tag @user.avatar.thumb.url, size: '50', class: 'img-circle', alt: 'Avatar' if @user.avatar? %>
                                      <%= link_to @user.name, user_path(@user.id), class: 'a-con' %>
                                      <small class='text-muted'> - <span class="user-subhead"><%= @user.role %></span></small>
                                  </td>
                                  <td>
                                      <a href="#"><%= @user.email %> </a>
                                  </td>
                                  <td style="width: 20%;">
                                      <a href="#" class="table-link danger">
                                          <span class="fa-stack">
                                              <i class="fa fa-square fa-stack-2x"></i>
                                              <%= link_to "<i class=\'glyphicon glyphicon-trash\'></i>".html_safe, user_admin_path(current_user, @user), class: 'a-con', method: :delete, data: {confirm: 'Are you sure?'} %>
                                          </span>
                                      </a>
                                  </td>
                              </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
